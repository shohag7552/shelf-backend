// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "dart run orm generate"
  output   = "../lib/src/generated_prisma_client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // Use environment variable for connection string
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String   // New: To store hashed password
  role      String   @default("USER") // New: To define user roles (e.g., ADMIN, USER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  posts Post[]

  @@map("users")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?  @db.Text
  published Boolean  @default(false)
  imageUrl  String?  @map("image_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int      @map("author_id")

  @@map("posts")
}